{
  "agents": {
    "defaults": {
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      }
    },
    "list": [
      {
        "id": "red-architect",
        "name": "Architect",
        "role": "design",
        "workspace": "~/.openclaw/workspace-red-architect",
        "subagents": {
          "allowAgents": ["*"]
        }
      },
      {
        "id": "yellow-builder",
        "name": "Builder",
        "role": "coding",
        "workspace": "~/.openclaw/workspace-yellow-builder",
        "subagents": {
          "allowAgents": ["*"]
        }
      },
      {
        "id": "green-ops",
        "name": "Ops",
        "role": "operations",
        "workspace": "~/.openclaw/workspace-green-ops",
        "subagents": {
          "allowAgents": ["*"]
        }
      },
      {
        "id": "blue-qa",
        "name": "QA",
        "role": "verification",
        "workspace": "~/.openclaw/workspace-blue-qa",
        "tools": {
          "deny": ["write", "edit", "apply_patch"]
        },
        "subagents": {
          "allowAgents": []
        }
      }
    ]
  },
  "tools": {
    "agentToAgent": {
      "enabled": true,
      "allow": [
        "red-architect",
        "yellow-builder",
        "green-ops",
        "blue-qa"
      ]
    }
  },
  "skills": {
    "load": {
      "extraDirs": ["~/.openclaw/skills"]
    }
  }
}
